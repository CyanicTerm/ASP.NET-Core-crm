@model IEnumerable<Storage>
@{
    ViewData["Title"] = "Storages";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Przechowalnia</h6>
    </div>
        <div class="table-responsive" style="margin:20px">
            @if (Model.Count() > 0)
            {
                <table class="table table-bordered" id="dataTable" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Numer klienta</th>
                            <th>Nr przechowalni</th>
                            <th>Nr rejestracyjny</th>
                            <th>Opis opon</th>
                            <th>Liczba opon</th>
                            <th>Opis felg</th>
                            <th>Liczba felg</th>
                            <th>Akcja</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var storage in Model)
                        {
                            <tr>
                                <td>@storage.ClientId.</td>
                                <td>@storage.StorageNum</td>
                                <td>@storage.PlateNum</td>
                                <td>@storage.TireDescription</td>
                                <td>@storage.TireNum</td>
                                @if (storage.RimNum != null && storage.RimDescription != null)
                                {
                                    <td>@storage.RimDescription</td>
                                    <td>@storage.RimNum</td>
                                }
                                else
                                {
                                    <td>-</td>
                                    <td>-</td>
                                }
                                <td>
                                    <a asp-action="Create" asp-controller="Storage"><i class="fas fa-plus-circle"></i></a>
                                    <a asp-action="Edit" asp-controller="Storage"><i class="fas fa-edit"></i></a>
                                    <a asp-action="Delete" asp-controller="Storage"><i class="fas fa-trash"></i></a>

                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <h1>Brak kompletów</h1>
            }

        </div>
    </div>
